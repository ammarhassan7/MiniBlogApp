<div class="bg-light p-5 rounded-3 mb-5 text-center shadow-sm">
  <h1 class="display-4 fw-bold text-primary">
    <i class="fas fa-feather-alt"></i> Blog App
  </h1>
  <p class="lead text-muted mb-4">Share your thoughts, ideas, and stories with the community.</p>

  <% if user_signed_in? %>
    <%= link_to new_post_path, class: "btn btn-success btn-lg px-4" do %>
      <i class="fas fa-plus"></i> New Post
    <% end %>
  <% else %>
    <%= link_to new_user_session_path, class: "btn btn-primary btn-lg px-4" do %>
      <i class="fas fa-sign-in-alt"></i> Join the Conversation
    <% end %>
  <% end %>
</div>

<div class="row">
  <% if @posts.any? %>
    <% @posts.each do |post| %>
      <div class="col-md-6 mb-4">
        <div class="card shadow-sm h-100 border-0 hover-shadow transition-all">
          <div class="card-body d-flex flex-column">

            <h5 class="card-title fw-bold">
              <%= link_to post.title, post, class: "text-decoration-none text-dark stretched-link" %>
            </h5>

            <h6 class="card-subtitle mb-3 text-muted border-bottom pb-2">
              <i class="fas fa-user-circle text-secondary"></i> <%= post.user.email.split('@')[0].capitalize %>
              <small class="float-end">
                <i class="far fa-clock"></i> <%= time_ago_in_words(post.created_at) %> ago
              </small>
            </h6>

            <p class="card-text text-secondary flex-grow-1">
              <%= truncate(post.body, length: 120, separator: ' ') %>
            </p>

            <div class="mt-3 d-flex justify-content-between align-items-center">
              <span class="badge bg-light text-dark border">
                <i class="fas fa-comments text-primary"></i> <%= post.comments.count %> comments
              </span>
              <span class="text-primary small fw-bold">Read More &rarr;</span>
            </div>

          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="col-12 text-center py-5">
      <div class="text-muted">
        <i class="fas fa-folder-open fa-3x mb-3"></i>
        <h4>No posts found yet.</h4>
        <p>Be the first to create one!</p>
      </div>
    </div>
  <% end %>
</div>

<div class="d-flex justify-content-center mt-5 mb-5">
  <%= paginate @posts %>
</div>

<style>
    .hover-shadow:hover {
        transform: translateY(-5px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
        transition: all 0.3s ease;
    }
    .transition-all {
        transition: all 0.3s ease;
    }
</style>